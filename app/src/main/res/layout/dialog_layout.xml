<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/md_grey_200">



    <EditText
        android:id="@+id/medNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:textSize="14dp"/>


    <RelativeLayout
        android:id="@+id/spinner_Container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/md_grey_300"

        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true">
        <Spinner
            android:id="@+id/medTypeSelect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/md_purple_300"

            android:layout_alignParentStart="true" />

    </RelativeLayout>


    <TextView
        android:id="@+id/unitSelect"
        android:text="Unit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quanEdit"
        android:layout_alignBottom="@+id/quanEdit"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:textColor="@color/md_purple_300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose medication type"
        android:textSize="14dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/medNameEdit"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Quantity"
        android:textColor="@color/md_purple_300"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unitï¼š"
        android:textColor="@color/md_purple_300"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/spinner_Container"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textView6"
        android:textColor="@color/md_purple_300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medication Name" />

    <EditText
        android:id="@+id/quanEdit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="number"
        android:layout_below="@+id/textView4"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_alignParentStart="true" />
</RelativeLayout>