<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/morning_container"
    android:layout_width="300dp"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="2dip"
    android:background="@color/md_purple_300">

    <TextView
        android:id="@+id/morningTime"
        style="@style/SpinnerButtonStyle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quantity"
        android:layout_alignBottom="@+id/quantity"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:text="Morning Time"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <ImageButton
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@drawable/ic_minus_circle"
        android:layout_marginStart="19dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/morningTime" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="10"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/minus" />

    <ImageButton
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@drawable/ic_plus_circle"
        android:layout_marginStart="7dp"
        android:layout_alignTop="@+id/minus"
        android:layout_toEndOf="@+id/quantity" />

</RelativeLayout>